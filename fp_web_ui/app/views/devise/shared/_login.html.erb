<div id="login">
  <% if user_signed_in? %>
    Signed in as 
    <% @twit = TwitterAccount.find_by_user_id(current_user.id) %>
    <% if @twit!=nil %> 
      <%=@twit.name %>. 
    <% else %>
      <%= current_user.email %>. 
    <%end%>
    Not you?
    <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Sign In", new_user_session_path %>
  <% end %>
</div>
