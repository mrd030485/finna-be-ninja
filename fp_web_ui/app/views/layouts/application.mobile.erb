<!DOCTYPE html>
<html>
<head>
  <title>FpWebUi</title>
  <%= stylesheet_link_tag    "application-mobile" %>
  <%= javascript_include_tag "application-mobile" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0"/> <!--320-->
</head>
<body>
  <div id="header">
    <div id="logo">
      <%= link_to "FPClassifier", root_path %>
    </div>
    <div id="menu_icon">
      <%= image_tag("PNG/menu.png",:class=>"icon") %>
    </div>
    <div id="menu">
      <%= render_navigation(:expand_all=>true) %>
    </div>
    <%= render "users/shared/login" %>
  </div>
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:error] %>
      <p class="error"><%= flash[:error] %></p>
    <% end %>
  
    <%= yield %>
    <div id="footer">
      <div id="mobile_select">
        <% if mobile_device? %>
          <%= link_to "Desktop Version", :mobile => 0 %>
        <% else %>
          <%= link_to "Mobile Version", :mobile => 1 %>
        <% end %>
      </div>
    </div>

</body>
</html>
